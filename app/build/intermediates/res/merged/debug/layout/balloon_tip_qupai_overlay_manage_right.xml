<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/title" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical|right"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="管理"
            android:visibility="visible" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="right"
        android:id="@+id/tip"
        android:layout_marginRight="33dp"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/Qupai.Text.BalloonTip.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="-8dp"
            android:background="@drawable/balloon_qupai_tip_rect_bg"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/tutorial_text_color"
            android:text="@string/qupai_overlay_guide_tip_manage"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:src="@drawable/balloon_tip_anchor_top_left"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/balloon_qupai_image"/>


    </FrameLayout>

</FrameLayout>