<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.duanqu.qupai.widget.CircularImageView
        android:id="@+id/effect_chooser_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:visibility="gone"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/effect_chooser_item_image_square"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/effect_chooser_item_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:textColor="@color/qupai_effect_chooser_item_text"
        android:textSize="13sp" />

    <com.duanqu.qupai.widget.CircleProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|bottom"
        android:id="@+id/effect_chooser_item_progress"
        app:backgroundWidth="25dp"
        app:backgroundHeight="25dp"
        app:progressWidth="21dp"
        app:progressThickness="2dp"
        android:background="@drawable/theme_default_qupai_progress_download_bg"
        />
    <!--<ProgressBar-->
        <!--android:id="@+id/effect_chooser_item_progress"-->
        <!--style="?android:attr/progressBarStyleHorizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="6dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_margin="6dp" />-->

    <ProgressBar
        android:id="@+id/effect_chooser_item_font_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/effect_chooser_item_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/qupai_btn_download_asset_normal"
        android:contentDescription="@null"
        android:src="@null"/>

    <ImageView
        android:id="@+id/effect_chooser_item_font"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@null"
        android:visibility="gone"
        android:contentDescription="@null"
        android:src="@drawable/qupai_editor_special_font_icon" />

    <ImageView
        android:id="@+id/effect_chooser_item_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:contentDescription="@null"
        android:src="@drawable/qupai_editor_asset_tag_new" />

   <ImageView android:id="@+id/effect_chooser_item_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:contentDescription="@null"
        android:src="@drawable/download_qupai_category_locked"/>

   <View
       android:id="@+id/effect_chooser_item_mask"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:contentDescription="@null"
       android:visibility="gone"
       android:background="@drawable/edit_qupai_diy_mask"/>
</merge>
