<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/tip"
	android:orientation="vertical">

	<TextView
		style="@style/Qupai.Text.BalloonTip.Large"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_dynamic_change_tip_left"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingTop="38dp"
		android:paddingBottom="10dp"
		android:textColor="@color/tutorial_text_color"
		android:id="@+id/tip_text"
		android:maxWidth="342dp"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/balloon_tip_anchor_qupai_bottom"
		android:id="@+id/tip_anchor"/>
</LinearLayout>
