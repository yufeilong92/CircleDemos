<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_more"
    android:layout_width="80dp"
    android:layout_height="@dimen/qupai_typegroup_size_edit"
    android:layout_gravity="center"
    android:background="@drawable/diy_group_qupai_item_ground_selector">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="@dimen/qupai_typegroup_size_edit"
        android:layout_gravity="center">
        <ImageView
	        android:id="@+id/diy_group_item_text"
	        android:layout_width="@dimen/qupai_typegroup_more_edit"
	        android:layout_height="@dimen/qupai_typegroup_more_edit"
	        android:gravity="right|top"
	        android:layout_gravity="right|top"
	        android:scaleType="center"
            android:visibility="gone"
	        android:src="?attr/qupaiEffectListMoreItem"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:scaleType="center"
            android:text="更多动图"
            />
    </FrameLayout>



    <ImageView
        android:id="@+id/effect_category_item_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:contentDescription="@null"
        android:padding="@dimen/qupai_draft_chooser_item_new_padding"
        android:visibility="gone"
        android:src="@drawable/qupai_editor_asset_tag_new"/>

</FrameLayout>
