<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:background="@drawable/dialog_qupai_radius_bg_white"
      android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:id="@+id/title"
            android:text="@string/recommend_to_weixin_for_unlock_paster"
            android:textColor="@android:color/black"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:id="@+id/image_left"/>

        <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:id="@+id/image_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
            android:background="@color/qupai_black_opacity_30pct"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/cancel"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/qupai_recommend_cancel"
                android:textColor="@color/qupai_black_opacity_40pct"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/qupai_black_opacity_30pct"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/ensure"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/qupai_recommend_immediately"
                android:textColor="@color/qupai_import_album_default_color"/>
    </LinearLayout>

</LinearLayout>
